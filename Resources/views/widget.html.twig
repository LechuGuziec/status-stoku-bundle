{% if status %}
  <div class="space-y-4">
    <div class="rounded-lg bg-slate-100 px-8 py-4 text-center text-xl text-niebieski-600">
      <div class="flex justify-center">
        {{ ikonaWyciagi|raw }}
      </div>
      <div class="font-semibold">
        WyciÄ…gi
      </div>
      <div class="font-black text-niebieski-700">
        {{ status.wyciagi.value }}
      </div>
    </div>

    <div class="rounded-lg bg-slate-100 px-8 py-4 text-center text-2xl text-niebieski-600">
      <div class="flex justify-center">
        {{ ikonaPokrywa|raw }}
      </div>
      <div class="font-semibold">
        Pokrywa
      </div>
      <div class="font-black text-niebieski-700">
        {{ status.pokrywa }} cm
      </div>
    </div>

    <div class="rounded-lg bg-slate-100 px-8 py-4 text-center text-2xl text-niebieski-600">
      <div class="flex justify-center">
        {{ ikonaWarunki|raw }}
      </div>
      <div class="font-semibold">
        Warunki
      </div>
      <div class="font-black text-niebieski-700">
        {{ status.warunki.value }}
      </div>
    </div>

    <div class="relative rounded-lg bg-slate-100 px-8 py-4 text-center text-2xl text-niebieski-600">
      <div class="flex justify-center">
        {{ ikonaKamera|raw }}
      </div>
      <a href="{{ cameraUrl ?? '#' }}" class="before:absolute before:inset-0 before:block before:content-['']"{% if cameraUrl is null %} aria-disabled="true"{% endif %}>
        <div class="font-semibold">
          Kamera
        </div>
        <div class="font-black text-niebieski-700">
          online
        </div>
      </a>
    </div>

    <div class="rounded-lg bg-sky-700/30 px-2 py-2 text-center text-sm text-sky-100">
      <div>
        Aktualizacja
      </div>
      <div class="font-semibold text-white">
        {{ status.updatedAt|format_datetime('medium', 'none') }}
      </div>
    </div>
  </div>
{% else %}
  <p class="text-sm opacity-70">
    Brak danych o statusie stoku.
  </p>
{% endif %}
